{
    "jslint.options": {
        "devel":    true,
        "maxerr":   50,
        "nomen":    true,
        "plusplus": true,
        "todo":     true,
        "unparam":  true,
        "vars":     true
    },
    "defaultExtension": "js",
    "path": {
        "src/thirdparty/CodeMirror2/**/*.js": {
            "spaceUnits": 2,
            "linting.enabled": false
        },
        "src/thirdparty/globmatch.js": {
            "spaceUnits": 2,
            "linting.enabled": false
        }
    },
    "spaceUnits": 4,
    "useTabChar": false
}